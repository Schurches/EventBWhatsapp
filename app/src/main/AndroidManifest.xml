<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.dsii.whatsapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/images"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/images"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".AppActivities.ChatListActivity"></activity>
        <activity android:name=".AppActivities.UsersListActivity" />
        <activity android:name=".AppActivities.ChatRoomActivity" />
        <activity
            android:name=".AppActivities.OptionPaneActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />
        <activity android:name=".AppActivities.BroadcastActivity" />
        <activity android:name=".AppActivities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AppActivities.AddContactActivity"
            android:theme="@style/Theme.AppCompat.Dialog.Alert" />
    </application>

</manifest>