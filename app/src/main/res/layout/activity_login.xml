<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_margin="20dp"
    android:gravity="center"
    android:background="@color/colorLightAmber"
    android:backgroundTint="@color/colorAccent"
    tools:context=".AppActivities.LoginActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        android:src="@mipmap/images"/>

    <EditText
        android:id="@+id/username"
        android:hint="Zuluaga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:textColor="@color/colorTextPrimary"
        android:backgroundTint="@color/colorTextIcons"
        android:drawableStart="@drawable/ic_user"
        android:drawableTint="@color/colorTextPrimary"

        android:inputType="text"
        />

    <EditText
        android:id="@+id/telNum"
        android:hint="3022557584"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:textColor="@color/colorTextPrimary"
        android:backgroundTint="@color/colorTextIcons"
        android:drawableStart="@drawable/ic_phone"
        android:drawableTint="@color/colorTextPrimary"
        android:inputType="text"
        />

    <Button
        android:id="@+id/loginButton"
        android:text="Log In"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:elevation="1dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/registerButton"
        android:text="Sign Up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:elevation="1dp"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@color/colorTextIcons"
        android:textAlignment="center"/>



</LinearLayout>